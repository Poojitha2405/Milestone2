<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:layout_marginEnd="16dp"
    android:elevation="12dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cropImageLayout"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:elevation="12dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cropImage"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/grapes"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cropNameCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green Grams"
            android:capitalize="words"
            android:textColor="@color/green_500"
            android:textSize="17sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cropImageLayout"/>

        <ImageButton
            android:id="@+id/cancelCart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/priceCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3.99/KG "
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cropImageLayout"/>


        <TextView
            android:id="@+id/numItemsCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:textStyle="normal"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cropImageLayout"/>

        <TextView
            android:id="@+id/subtotalCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$300.99  Subtotal"
            android:textSize="19sp"
            android:textStyle="bold|italic"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cropImageLayout"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>
