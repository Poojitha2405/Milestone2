<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.MI_Farmer.BuyNutsActivities">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/custom_rectangle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:id="@+id/backA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.025"
        android:text="User: James"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/backA"/>

    <ImageButton
        android:id="@+id/logOutA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintCircleRadius="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"
        app:cardCornerRadius="8dp"
        android:layout_below="@+id/logOutA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:text="Buy Nuts"
                android:textAllCaps="true"
                android:textColor="@color/green_500"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/cartAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-10dp"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/cart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/cart"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/cartAmount"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/cardView">

        <androidx.cardview.widget.CardView
            android:id="@+id/coconutsCard"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:elevation="12dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/coconutsImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/coconuts"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/coconuts_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Coconuts"
                    android:textAllCaps="true"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/coconutsImage"/>


                <TextView
                    android:id="@+id/priceTagCoconuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="Price per Kg: $ "
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/coconuts_name" />

                <TextView
                    android:id="@+id/priceAmountCoconuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="5dp"
                    android:text=" 14.49"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:layout_below="@+id/coconuts_name"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/priceTagCoconuts"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/almondsCard"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:elevation="12dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/almondsImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/almonds"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/almonds_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Almonds"
                    android:textAllCaps="true"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/almondsImage"/>


                <TextView
                    android:id="@+id/priceTagAlmonds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="Price per Kg: $ "
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/almonds_name" />

                <TextView
                    android:id="@+id/priceAmountCowPeas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="5dp"
                    android:text=" 9.99"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:layout_below="@+id/almonds_name"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/priceTagAlmonds"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/linearLayout">

        <androidx.cardview.widget.CardView
            android:id="@+id/chetNutsCard"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:elevation="12dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/chetNutsImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/chestnuts"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/chest_nuts_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Chestnuts"
                    android:textAllCaps="true"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/chetNutsImage"/>


                <TextView
                    android:id="@+id/priceTagChestNuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="Price per Kg: $ "
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/chest_nuts_name" />

                <TextView
                    android:id="@+id/priceAmountChestNuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="5dp"
                    android:text=" 36.49"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:layout_below="@+id/chest_nuts_name"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/priceTagChestNuts"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/walnutsCard"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:elevation="12dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/walnutsImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/walnut"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/walnuts_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Walnuts"
                    android:textAllCaps="true"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/walnutsImage"/>


                <TextView
                    android:id="@+id/priceTagWalnuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="Price per Kg: $ "
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/walnuts_name" />

                <TextView
                    android:id="@+id/priceAmountWalnuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="5dp"
                    android:text=" 23.99"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:layout_below="@+id/walnuts_name"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/priceTagWalnuts"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>