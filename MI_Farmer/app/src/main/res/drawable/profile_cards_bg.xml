<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item >
        <shape>
            <solid android:color="@color/shadow_color" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item android:bottom="5dp" android:right="2dp" android:left="2dp" android:top="2dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="@color/green_500"
                android:endColor="@color/green_500"
                android:angle="200" />
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/green_500"/>
        </shape>
    </item>
</layer-list>